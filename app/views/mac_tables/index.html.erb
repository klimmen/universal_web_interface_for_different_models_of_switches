 <%= f.radio_button(:search_type, "vid", class: "search_type")%>
 <%= f.label "VID" %>
 <%= f.radio_button(:search_type, "mac", class: "search_type")%>
 <%= f.label "MAC" %>
 <%= f.radio_button(:search_type, "all", class: "search_type")%>
 <%= f.label "All" %>
<p>
<%= f.text_field :search_value, id: "search_value" %>
</p>
<p>
 <%= f.submit 'Search', :class => 'btn btn-primary go_spiner'%>
