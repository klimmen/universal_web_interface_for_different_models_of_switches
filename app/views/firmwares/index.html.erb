<p id="notice"><%= notice %></p>

<h1>Listing Firmwares</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Switch model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firmwares.each do |firmware| %>
      <tr>
        <td><%= firmware.name %></td>
        <td><%= firmware.switch_model.name %></td>
        <td><%= link_to 'Show', firmware, class: "btn-sm btn-info"  %></td>
        <td><%= link_to 'Edit', edit_firmware_path(firmware), class: "btn-sm btn-info"  %></td>
        <td><%= link_to 'Destroy', firmware, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

