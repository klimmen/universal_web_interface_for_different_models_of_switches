<p id="notice"><%= notice %></p>

<h1>Listing Mibs</h1>
<% if !@mibs.blank? then %>
<h3>Model - <%=@mibs.first.firmwares.first.switch_model.name %></h3>
<h3>Firmware - <%=@mibs.first.firmwares.first.name %></h3>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th class="col-md-2">Name</th>
      <th class="col-md-2">Action</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @mibs.each do |mib| %>
      <tr>
        <td><%= mib.name %></td>
        <td><%= mib.value_oid.name %></td>
        <td><%= link_to 'edit', edit_switch_model_firmware_mib_path(params[:switch_model_id], params[:firmware_id],mib), class: "btn-sm btn-info glyphicon glyphicon-eye-open"  %>
        <%= link_to '', switch_model_firmware_mib_path(params[:switch_model_id], params[:firmware_id],mib), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger glyphicon glyphicon-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mib', new_switch_model_firmware_mib_path(params[:switch_model_id], params[:firmware_id] ), class: "btn btn-info" %>
