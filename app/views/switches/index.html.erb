<p id="notice"><%= notice %></p>

<h1>Listing Switches</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ip</th>
      <th>Login</th>
      <th>Pass</th>
      <th>Snmp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @switches.each do |switch| %>
      <tr>
        <td><%= switch.name %></td>
        <td><%= switch.ip %></td>
        <td><%= switch.login %></td>
        <td><%= switch.pass %></td>
        <td><%= switch.snmp %></td>
        <td><%= link_to 'Show', switch, class: "btn-sm btn-info" %></td>
        <td><%= link_to 'Edit', edit_switch_path(switch), class: "btn-sm btn-info" %></td>
        <td><%= link_to 'Destroy', switch, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Switch', new_switch_path, class: "btn btn-info" %>
