<p id="notice"><%= notice %></p>

<h1>Listing Switch Models</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @switch_models.each do |switch_model| %>
      <tr>
        <td><%= switch_model.name %></td>
        <td><%= link_to 'Show', switch_model, class: "btn-sm btn-info"  %></td>
        <td><%= link_to 'Edit', edit_switch_model_path(switch_model), class: "btn-sm btn-info"  %></td>
        <td><%= link_to 'Destroy', switch_model, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Switch model', new_switch_model_path, class: "btn btn-info" %>
